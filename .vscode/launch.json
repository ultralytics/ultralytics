{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "convert kitti to yolo format",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ultralytics/data/scripts/convert_kitti_3d.py",
            "args": [
                "--kitti-root",
                "/home/rick/datasets/kitti_raw",
                "--output-root",
                "/home/rick/datasets/converted_kitti_3dop",
                "--split-strategy",
                "3dop",
                "--filter-classes",
                "Car",
                "Pedestrian",
                "Cyclist"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "test datalaoder",
            "type": "debugpy",
            "request": "launch",
            "program": "ultralytics/data/kitti_stereo.py",
            "args": [
                "--root",
                "/root/autodl-tmp/converted_kitti_3dop",
                "--split",
                "train"
            ]
        },
        {
            "name": "train smoke test",
            "type": "debugpy",
            "request": "launch",
            "program": "/home/rick/miniconda/envs/pytorch/bin/yolo",
            "args": [
                "task=stereo3ddet",
                "data=/home/rick/converted_kitti_3dop/dataset.yaml",
                "model=yolo11-stereo3ddet.yaml",
                "mode=train",
                "epochs=20",
                "batch=32",
                // "workers=0"
            ],
        },
        {
            "name": "validate with trained weights",
            "type": "debugpy",
            "request": "launch",
            "program": "/home/rick/miniconda/envs/pytorch/bin/yolo",
            "args": [
                "task=stereo3ddet",
                "mode=val",
                "model=/home/rick/ultralytics/runs/stereo3ddet/train20/weights/best.pt",
                "data=/home/rick/datasets/converted_kitti_3dop/dataset.yaml",
                "batch=4",
                "plots=True",
                "save_json=True",
                "conf=0.25"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "predict single stereo pair",
            "type": "debugpy",
            "request": "launch",
            "program": "/root/miniconda3/bin/yolo",
            "args": [
                "task=stereo3ddet",
                "mode=predict",
                "model=/root/ultralytics/runs/stereo3ddet/train68/weights/best.pt",
                "source=/root/autodl-tmp/converted_kitti_3dop/images/val",
                "imgsz=384",
                "conf=0.25",
                "save=True",
                "show=False"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "predict with custom source",
            "type": "debugpy",
            "request": "launch",
            "program": "/root/miniconda3/bin/yolo",
            "args": [
                "task=stereo3ddet",
                "mode=predict",
                "model=/root/ultralytics/runs/stereo3ddet/train68/weights/best.pt@",
                "source=/root/autodl-tmp/converted_kitti_3dop/images/val/000000_left.png",
                "imgsz=384",
                "conf=0.25",
                "save=True",
                "show=False"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "test visualization",
            "type": "debugpy",
            "request": "launch",
            "program": "test_visualization.py",
            "args": [
                "--dataset-root",
                "/root/autodl-tmp/converted_kitti_3dop",
                "--output-dir",
                "/root/autodl-tmp/converted_kitti_3dop/visualization"
            ]
        }
    ]
}